@model IList<AssetDTO>

<table class="table table-hover" id="assets-table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Purchase date</th>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
            <th scope="col">Lifecycle</th>
            <th scope="col" class="text-right">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td></td>
                <td>@item.Name</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 50%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </td>
                <td class="text-right">
                    <div class="btn-group btn-group-sm" role="group">
                        <button class="btn btn-info">Edit</button>
                        <button class="btn btn-danger">Kick</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>